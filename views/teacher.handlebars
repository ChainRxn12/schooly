{{!-- teacher landing page --}}
<h2> Welcome Back!</h2>
<div class="teacher-page" id="teacher">

    <body class="teacher-landing-page">
        <div class="login-card">
            <div class="login-card-header">
                <h2>Teacher Links</h2>
                <ul class="nav">
                    <li class="nav-item">
                        <button class="roster-btn" id="roster-btn">
                            <a class="nav-link active" href="/dashboard/teacher/roster">Roster</a>
                        </button>
                    </li>
                    <ul id="roster-el">
                        {{#each students as |student|}}
                        <li class="nav-item">
                            <button class="roster-btn">
                                <a class="nav-link active" href="/teachers/rosters">
                                {{student.first_name}} {{student.last_name}}</a>
                            </button>
                        </li>
                        {{/each}}
                    </ul>
                </ul>
            </div>
        </div>
</div>

</body>


{{#if logged_in}}
<script src="/js/logout.js"></script>
{{/if}}

